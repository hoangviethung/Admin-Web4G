.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/setting.svg", alt="", srcset="")
				.page-title-content
					h3 Cài đặt chung
					p Tại đây các quản trị viên có thể chỉnh sửa và cài đặt chung cho website của mình
	.row
		.block-table.col-lg-12.mt-4
			table.table.table-bordered.m-0
				thead
					tr
						th #
						th Từ khóa
						th Giá trị
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td SmtpServer
							td mail.npvexpress.com
							td
								.list-item.center
									// SỬA
									button.btn-popup.btn-custom-icon.item(data-url="#", dataID="item-"+i, data-toggle='modal', data-target='#popup_form')
										.icon(data-toggle="tooltip" data-placement="bottom" title="Sửa")
											img.svg(src="./assets/images/icons/edit.svg", alt="", srcset="")
			// BOX HIỆN LÊN FORM
			#popup_form.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
				.modal-dialog.modal-dialog-centered(role='document')
					.modal-content
						.modal-header
							h5.modal-title Thay đổi giá trị
							button.close(type='button', data-dismiss='modal', aria-label='Close')
								span(aria-hidden='true') ×
						.modal-body
							form(action="#" method="method")
								.form-group.row
									label.col-sm-5.col-form-label(for='staticEmail') Từ khóa
									.col-sm-7
										input#staticEmail.form-control-plaintext(type='text', readonly='', value='SmtpServer')
								.form-group.row
									label.col-sm-5.col-form-label Giá trị
									.col-sm-7
										.input-group.input-group-sm
											input#settingChange.form-control(type='text')
						.modal-footer
							button.btn.btn-danger.btn-sm(type='button', data-dismiss='modal') Hủy
							button.submit-change-setting.btn.btn-success.btn-sm(data-url="#") Cập nhật
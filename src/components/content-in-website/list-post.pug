.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/post.svg", alt="", srcset="")
				.page-title-content
					h3 Danh sách các bài viết
					p Tại đây các quản trị viên có thể quản lý các bài viết trên Website với các chức năng cơ bản: thêm, xóa, sửa.
			.page-title-actions
				a(href="create-post.html").btn-custom.submit Thêm mới
	.row
		.block-table.shadow-sm.col-lg-12
			.filter
				form(action="#" method="method")
					.form-row
						.col-lg-3.form-group
							label Hiển thị
							.input-group.shadow-sm
								select.form-control
									option 10
									option 15
									option 20
									option 30
									option 40
									option Tất cả
						.col-lg-3.form-group
							label Danh mục
							.input-group.shadow-sm
								select.form-control
									option Chính
									option Giới thiệu
									option Dịch vụ
									option Tiện ích
									option Tin tức
						.col-lg-3.form-group
							label Tìm kiếm
							.input-group.shadow-sm
								input.form-control(placeholder="Tìm kiếm")
					button.btn.btn-primary.btn-sm.shadow Xác nhận
			table.table.table-bordered.table-striped
				thead
					tr
						th #
						th Tiêu đề
						th Đường dẫn
						th Danh mục
						th.text-center Ngôn ngữ
						th.text-center Hiển thị
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td Chuyển đổi đơn vị
							td /tien-ich/chuyen-doi-don-vi
							td Tiện ích
							td
								.language
									figure.shadow
										img.ofc(src="./assets/images/nation/"+i+".png", alt="")
							td.text-center
								.input-custom
									label._checkbox-custom
										input.custom-control-input(type='checkbox' checked="checked" onclick="return false")
										span.custom-control-indicator
							td
								.list-item.center
									// SỬA
									a.btn-custom-icon.item(href="create-post.html")
										.icon(data-toggle="tooltip" data-placement="bottom" title="Sửa")
											img.svg(src="./assets/images/icons/edit.svg", alt="", srcset="")
									// XÓA
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-notification" dataFieldName="postID" dataId="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xóa")
											img.svg(src="./assets/images/icons/delete.svg", alt="", srcset="")
			include ../_global/_pagination.pug
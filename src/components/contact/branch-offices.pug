.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/maps.svg", alt="", srcset="")
				.page-title-content
					h3 Quản Lý Chi Nhánh
					p Tại đây các quản trị viên có thể quản lý thông tin các chi nhánh của công ty với các chức năng cơ bản: thêm, xóa, sửa.
			.page-title-actions
				a(href="create-branch-offices.html").btn.btn-success Thêm mới
	.row
		.block-table.col-lg-12
			.filter
				form(action="#" method="method")
					.form-row
						.col-lg-3.form-group
							label Hiển thị
							.input-group.shadow-sm
								select.form-control
									option 10
									option 15
									option 20
									option 30
									option 40
									option Tất cả
						.col-lg-3.form-group
							label Danh mục
							.input-group.shadow-sm
								select.form-control
									option Chính
									option Giới thiệu
									option Dịch vụ
									option Tiện ích
									option Tin tức
						.col-lg-3.form-group
							label Tìm kiếm
							.input-group.shadow-sm
								input.form-control(placeholder="Tìm kiếm")
					button.btn.btn-primary.btn-sm.shadow Xác nhận
			table.table.table-bordered.table-striped
				thead
					tr
						th #
						th Tên chi nhánh
						th Địa chỉ
						th.text-center Ngôn ngữ
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td Ho Chi Minh Headoffice
							td Floor 4, Thang Long Building, 29 Thang Long St., Ward 4, Tan Binh Dist., HCMC, Vietnam.
							td
								.language
									figure.shadow
										img.ofc(src="./assets/images/nation/"+i+".png", alt="")
							td
								.list-item.center
									// SỬA
									a.btn-custom-icon.item(href="create-branch-offices.html")
										.icon(data-toggle="tooltip" data-placement="bottom" title="Sửa")
											img.svg(src="./assets/images/icons/edit.svg", alt="", srcset="")
									// XÓA
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-notification" dataFieldName="branchID" dataId="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xóa")
											img.svg(src="./assets/images/icons/delete.svg", alt="", srcset="")
			include ../_global/_pagination.pug
.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/mail.svg", alt="", srcset="")
				.page-title-content
					h3 Danh sách người liên hệ
					p Tại đây các quản trị viên có thể quản lý thông tin người liên hệ với website với các chức năng cơ bản: xem chi tiết, xóa.
	.row
		.block-table.col-lg-12
			.filter
				form(action="#" method="method")
					.form-row
						.col-lg-3.form-group
							label Hiển thị
							.input-group.shadow-sm
								select.form-control
									option 10
									option 15
									option 20
									option 30
									option 40
									option Tất cả
						.col-lg-3.form-group
							label Danh mục
							.input-group.shadow-sm
								select.form-control
									option Chính
									option Giới thiệu
									option Dịch vụ
									option Tiện ích
									option Tin tức
						.col-lg-3.form-group
							label Tìm kiếm
							.input-group.shadow-sm
								input.form-control(placeholder="Tìm kiếm")
					button.btn.btn-primary.btn-sm.shadow Xác nhận
			table.table.table-bordered.table-striped
				thead
					tr
						th #
						th.text-center Tên
						th.text-center Số điện thoại
						th.text-center Email
						th.text-center Thời gian liên hệ
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td.text-center Vũ Hoàng Sơn
							td.text-center 0969912404
							td.text-center hoangviet.hung.009@gmail.com
							td.text-center 20/12/2019 14:35
							td
								.list-item.center
									// XEM CHI TIẾT
									a.btn-custom-icon.item(href="contact-detail.html")
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xem chi tiết")
											img.svg(src="./assets/images/icons/eye.svg", alt="", srcset="")
									// XÓA
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-notification" dataFieldName="contactID" dataId="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xóa")
											img.svg(src="./assets/images/icons/delete.svg", alt="", srcset="")
			include ../_global/_pagination.pug
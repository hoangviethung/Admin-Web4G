.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/user.svg", alt="", srcset="")
				.page-title-content
					h3 Tài khoản quản trị
					p Tại đây các quản trị viên có thể quản lý được toàn bộ tài khoản quản trị với các chức năng cơ bản: thêm, xóa, sửa.
			.page-title-actions
				a(href="create-user.html").btn.btn-success Thêm mới
	.row
		.seach.col-lg-4
			form(action="#" method="method")
				.form-group
					.form-input
						input(type="text" placeholder="Nhập từ khóa để tìm kiếm")
						button
							img.svg(src="./assets/images/icons/search.svg", alt="", srcset="")
		.block-table.col-lg-12.mt-4
			table.table.table-bordered.m-0
				thead
					tr
						th #
						th Tên tài khoản
						th Số điện thoại
						th Email
						th Thuộc bộ quyền
						th Ngày tạo
						th.text-center Trạng thái
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td Administrator
							td 0969912404
							td y.tran@web4gsolutions.com
							td
								.list-item
									.item.badge.badge-primary.p-2 Admin
									.item.badge.badge-primary.p-2 Mod
									.item.badge.badge-primary.p-2 Guest
							td 12/11/2019 14:50
							td.text-center
								.input-custom
									label._checkbox-custom
										input.custom-control-input(type='checkbox' readonly)
										span.custom-control-indicator
							td
								.list-item.center
									// SỬA
									a.btn-custom-icon.item(href="create-user.html")
										.icon(data-toggle="tooltip" data-placement="bottom" title="Sửa")
											img.svg(src="./assets/images/icons/edit.svg", alt="", srcset="")
									// THAY ĐỔI MẬT KHẨU
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-form-submit" dataID="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Đổi mật khẩu")
											img.svg(src="./assets/images/icons/user-setting.svg", alt="", srcset="")
									// XÓA
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-notification" dataId="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xóa")
											img.svg(src="./assets/images/icons/delete.svg", alt="", srcset="")
			// BOX HIỆN LÊN CÂU HỎI
			.d-none
				.modal-dialog.fancybox-content#fancybox-notification
					.title-modal
						h5 Thông báo
						p Web4gsolutions xin thông báo
					.content-modal
						p Bạn có chắc chắn xóa ?
					.list-button
						.item
							button.btn-custom.cancel(data-fancybox-close) Hủy
						.item
							button.btn-custom.submit.submit-delete(data-url="#") Chấp nhận
			// BOX FORM HIỆN LÊN
			.d-none
				.modal-dialog.fancybox-content#fancybox-form-submit
					.title-modal
						h5 Thay đổi mật khẩu
						p Web4gsolutions xin thông báo
					.content-modal
						form(action="#" method="method")
							.form-group.row
								label.col-sm-5.col-form-label(for='staticEmail') Tài khoản
								.col-sm-7
									.input-group.input-group-sm
										input.form-control-plaintext(type='text', readonly='', value='Administrator')
							.form-group.row
								label.col-sm-5.col-form-label Mật khẩu cũ
								.col-sm-7
									.input-group.input-group-sm
										input#oldpass.form-control(type='Password')
							.form-group.row
								label.col-sm-5.col-form-label Mật khẩu mới
								.col-sm-7
									.input-group.input-group-sm
										input#newpass.form-control(type='Password')
							.form-group.row
								label.col-sm-5.col-form-label Nhập lại mật khẩu mới
								.col-sm-7
									.input-group.input-group-sm
										input#re_newpass.form-control(type='Password')
					.list-button
						.item
							button.btn-custom.cancel(data-fancybox-close) Hủy
						.item
							button.btn-custom.submit.submit-change-pass(data-url="#") Cập nhật
.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/document.svg", alt="", srcset="")
				.page-title-content
					h3 Document
					p Tại đây các Developer Web4gsolutions có thể tham khảo các Components hiện có để dễ dàng tạo trang.
	.row
		.block-main.shadow-sm.col-lg-12
			.tab-container
				ul.list-tab
					li.item(toggle-for="item-1").acitve Components
					li.item(toggle-for="item-2") Ck-Editor
					li.item(toggle-for="item-3") Table and Task in table
					li.item(toggle-for="item-4") Drop-zone
				.tab-content
					// Components in Website
					.content(tab-id="item-1")
						.block-form
							.form-row
								.form-group.col-lg-3
									label Select Option (Normal)
									.input-group.shadow-sm
										select.form-control
											option Select 1
											option Select 2
											option Select 3
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-3
									label Input Type Text
									.input-group.shadow-sm
										input.form-control(placeholder="Input Type Text")
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-3
									label Input Type Number
									.input-group.shadow-sm
										input.form-control(type='number' min="1" value="0")
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-3
									label Input Type Date ( Mặc định - Hiện tại )
									.input-group.shadow-sm
										input.form-control(type='date')
										.input-group-prepend
											span.input-group-text
												img.svg(src="./assets/images/icons/date.svg", alt="", srcset="")
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-3
									label Input Type Link
									.input-group.shadow-sm
										.input-group-prepend
											span.input-group-text http://web4gsolutions.com/
										input.form-control(type='text')
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-3
									.input-custom
										h5.mb-3 Check Box Custom 1
										label._checkbox-custom.mb-0
											input.custom-control-input(type='checkbox' readonly)
											span.custom-control-indicator
								// XUỐNG DÒNG NHANH = div(class="w-100")
								.w-100
								.form-group.col-lg-2
									label Check Box Custom 2 (Màu mặc định)
									.input-custom
										._checkbox-normal
											input#_checkbox-1(type="checkbox")
											label(for="_checkbox-1")
												svg(viewBox=[0, 0, 50, 50].join( ))
													path(d="M5 30 L 20 45 L 45 5")
								.form-group.col-lg-2
									label Check Box Custom 2 (Màu Login)
									.input-custom
										._checkbox-normal.login-form
											input#_checkbox-2(type="checkbox")
											label(for="_checkbox-2")
												svg(viewBox=[0, 0, 50, 50].join( ))
													path(d="M5 30 L 20 45 L 45 5")
								.w-100
								.form-group.text-right.col-lg-12
									label Thanh phân trang ( Mặc đinh năm bên góc tay phải )
									include ../_global/_pagination.pug

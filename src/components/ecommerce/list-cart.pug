.main__inner
	.page-title
		.page-title-wrapper
			.page-title-heading
				.page-title-icon
					img.svg(src="./assets/images/icons/cart.svg", alt="", srcset="")
				.page-title-content
					h3 Danh sách đơn hàng
					p Tại đây các quản trị viên có thể quản lý các đơn đặt hàng.
			.page-title-actions
	.row
		.block-table.col-lg-12
			.filter
				form(action="#" method="method")
					.form-row
						.col-lg-3.form-group
							label Hiển thị
							.input-group.shadow-sm
								select.form-control
									option 10
									option 15
									option 20
									option 30
									option 40
									option Tất cả
						.col-lg-3.form-group
							label Danh mục
							.input-group.shadow-sm
								select.form-control
									option Chính
									option Giới thiệu
									option Dịch vụ
									option Tiện ích
									option Tin tức
						.col-lg-3.form-group
							label Tìm kiếm
							.input-group.shadow-sm
								input.form-control(placeholder="Tìm kiếm")
					button.btn.btn-primary.btn-sm.shadow Xác nhận
			table.table.table-bordered.table-striped
				thead
					tr
						th #
						th Mã đơn hàng
						th Tên khách hàng
						th Số điện thoại
						th Thời gian đặt hàng
						th Tình trạng đơn hàng
						th.text-center Tác vụ
				tbody
					-for(i=1;i<5;i++)
						tr
							td #{i}
							td 121910024
							td Nguyễn Minh Khoa
							td 0909523435
							td 01/12/2019 00:31
							td Đang chờ xử lý
							td
								.list-item.center
									// XEM CHI TIẾT
									a.btn-custom-icon.item(href="cart-detail.html")
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xem chi tiết")
											img.svg(src="./assets/images/icons/eye.svg", alt="", srcset="")
									// XÓA
									button.btn-popup.btn-custom-icon.item(fancybox="fancybox-notification" dataFieldName="cartID" dataId="item-"+i)
										.icon(data-toggle="tooltip" data-placement="bottom" title="Xóa")
											img.svg(src="./assets/images/icons/delete.svg", alt="", srcset="")
			include ../_global/_pagination.pug